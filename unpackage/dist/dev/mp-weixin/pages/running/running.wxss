
.running-container.data-v-f47c4c53 {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 当前订单 */
.current-order.data-v-f47c4c53 {
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.order-header.data-v-f47c4c53 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.header-title.data-v-f47c4c53 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.order-status.data-v-f47c4c53 {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

/* 进度条 */
.progress-bar.data-v-f47c4c53 {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
}
.progress-step.data-v-f47c4c53 {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.step-icon.data-v-f47c4c53 {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.3);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}
.progress-step.active .step-icon.data-v-f47c4c53 {
  background: #fff;
  color: #07c160;
}
.step-text.data-v-f47c4c53 {
  font-size: 24rpx;
  color: #fff;
}
.progress-line.data-v-f47c4c53 {
  width: 80rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 10rpx;
}
.progress-line.active.data-v-f47c4c53 {
  background: #fff;
}

/* 订单信息卡片 */
.order-info-card.data-v-f47c4c53 {
  padding: 30rpx;
}
.info-section.data-v-f47c4c53 {
  margin-bottom: 30rpx;
}
.info-section.data-v-f47c4c53:last-child {
  margin-bottom: 0;
}
.section-title.data-v-f47c4c53 {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.address-item.data-v-f47c4c53 {
  margin-bottom: 16rpx;
}
.address-item.data-v-f47c4c53:last-child {
  margin-bottom: 0;
}
.addr-label.data-v-f47c4c53 {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}
.addr-value.data-v-f47c4c53 {
  font-size: 28rpx;
  color: #333;
  display: block;
}
.contact-item.data-v-f47c4c53 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.contact-label.data-v-f47c4c53 {
  font-size: 26rpx;
  color: #999;
}
.contact-value.data-v-f47c4c53 {
  font-size: 28rpx;
  color: #333;
}

