
.notice-container.data-v-1c2e4c1e {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 类型筛选 */
.type-tabs.data-v-1c2e4c1e {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.tab-item.data-v-1c2e4c1e {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.tab-item.active.data-v-1c2e4c1e {
  color: #07c160;
  font-weight: bold;
}
.tab-item.active.data-v-1c2e4c1e::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 公告列表 */
.notice-list.data-v-1c2e4c1e {
  padding: 20rpx;
}
.notice-item.data-v-1c2e4c1e {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.notice-header.data-v-1c2e4c1e {
  margin-bottom: 20rpx;
}
.notice-title-row.data-v-1c2e4c1e {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.notice-tag.data-v-1c2e4c1e {
  background: #e6f7ff;
  color: #1890ff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}
.notice-tag.activity.data-v-1c2e4c1e {
  background: #fff7e6;
  color: #fa8c16;
}
.notice-title.data-v-1c2e4c1e {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.notice-time.data-v-1c2e4c1e {
  font-size: 24rpx;
  color: #999;
}
.notice-content.data-v-1c2e4c1e {
  margin-bottom: 20rpx;
}
.notice-image.data-v-1c2e4c1e {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}
.notice-desc.data-v-1c2e4c1e {
  display: flex;
  flex-direction: column;
}
.desc-text.data-v-1c2e4c1e {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.view-more.data-v-1c2e4c1e {
  font-size: 26rpx;
  color: #07c160;
}

/* 空状态 */
.empty-state.data-v-1c2e4c1e {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}
.empty-icon.data-v-1c2e4c1e {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}
.empty-text.data-v-1c2e4c1e {
  font-size: 28rpx;
  color: #999;
}

/* 加载中 */
.loading-state.data-v-1c2e4c1e {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}
.loading-text.data-v-1c2e4c1e {
  font-size: 28rpx;
  color: #999;
}
