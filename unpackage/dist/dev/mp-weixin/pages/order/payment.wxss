  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 8px;
  font-size: 20px;
  margin-right: 12px;
}
.method-info.data-v-13c3fb22 {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.method-name.data-v-13c3fb22 {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}
