.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}
.nav-bar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}
.nav-bar .nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.nav-bar .nav-content .title-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav-bar .nav-content .title-group .title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.2;
}
.nav-bar .nav-content .title-group .status {
  font-size: 20rpx;
  margin-top: 4rpx;
}
.nav-bar .nav-content .title-group .status.status-online {
  color: #fff;
  opacity: 0.9;
}
.nav-bar .nav-content .title-group .status.status-offline {
  color: #ffdada;
  font-weight: bold;
}
.nav-bar .nav-content .back-btn, .nav-bar .nav-content .placeholder {
  width: 60rpx;
}
.message-list {
  flex: 1;
}
.message-list .msg-item {
  padding: 20rpx 30rpx;
}
.message-list .msg-item .msg-time {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.message-list .msg-item .msg-content-wrapper {
  display: flex;
  flex-direction: row;
}
.message-list .msg-item .msg-content-wrapper .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background-color: #eee;
}
.message-list .msg-item .msg-content-wrapper .msg-body {
  display: flex;
  flex-direction: column;
  max-width: 70%;
}
.message-list .msg-item .msg-content-wrapper .msg-body .msg-nickname {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 6rpx;
  margin-left: 10rpx;
}
.message-list .msg-item .msg-content-wrapper .msg-body .msg-bubble {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  position: relative;
}
.message-list .msg-item .msg-content-wrapper .msg-body .msg-bubble::before {
  content: "";
  position: absolute;
  left: -10rpx;
  top: 30rpx;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-right: 10rpx solid #fff;
}
.message-list .msg-item .msg-content-wrapper .msg-body .msg-bubble .text {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}
.message-list .msg-item.msg-mine .msg-content-wrapper {
  flex-direction: row-reverse;
}
.message-list .msg-item.msg-mine .msg-content-wrapper .avatar {
  margin-right: 0;
  margin-left: 20rpx;
}
.message-list .msg-item.msg-mine .msg-content-wrapper .msg-body {
  align-items: flex-end;
}
.message-list .msg-item.msg-mine .msg-content-wrapper .msg-body .msg-nickname {
  margin-right: 10rpx;
  margin-left: 0;
}
.message-list .msg-item.msg-mine .msg-content-wrapper .msg-body .msg-bubble {
  background-color: #e0e7ff;
  color: #333;
}
.message-list .msg-item.msg-mine .msg-content-wrapper .msg-body .msg-bubble .text {
  color: #333;
}
.message-list .msg-item.msg-mine .msg-content-wrapper .msg-body .msg-bubble::before {
  display: none;
}
.message-list .msg-item.msg-mine .msg-content-wrapper .msg-body .msg-bubble::after {
  content: "";
  position: absolute;
  right: -10rpx;
  top: 30rpx;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 10rpx solid #e0e7ff;
}
.input-bar {
  background-color: #f7f7f7;
  border-top: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
}
.input-bar .input {
  flex: 1;
  background-color: #fff;
  height: 72rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.input-bar .send-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 26rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  padding: 0;
}
.input-bar .send-btn[disabled] {
  background-color: #eee;
  color: #999;
}