
.profile-edit-container.data-v-ead3e541 {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 头像区域 */
.avatar-section.data-v-ead3e541 {
  background: #fff;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar-wrapper.data-v-ead3e541 {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.avatar-image.data-v-ead3e541 {
  width: 100%;
  height: 100%;
  border-radius: 100rpx;
  border: 4rpx solid #f5f5f5;
}
.avatar-mask.data-v-ead3e541 {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 0 0 100rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.camera-icon.data-v-ead3e541 {
  font-size: 32rpx;
  line-height: 1;
}
.change-text.data-v-ead3e541 {
  font-size: 20rpx;
  color: #fff;
  margin-top: 4rpx;
}
.avatar-tip.data-v-ead3e541 {
  font-size: 26rpx;
  color: #999;
}

/* 表单区域 */
.form-section.data-v-ead3e541 {
  background: #fff;
}
.form-item.data-v-ead3e541 {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.form-item.data-v-ead3e541:last-child {
  border-bottom: none;
}
.form-label.data-v-ead3e541 {
  width: 150rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.form-input.data-v-ead3e541 {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.form-value.data-v-ead3e541 {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}
.form-item.disabled.data-v-ead3e541 {
  background: #f8f8f8;
}
.form-item.disabled .form-label.data-v-ead3e541,
.form-item.disabled .form-value.data-v-ead3e541 {
  color: #999;
}
.picker-value.data-v-ead3e541 {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow.data-v-ead3e541 {
  font-size: 40rpx;
  color: #999;
  font-weight: bold;
}

/* 保存按钮 */
.submit-section.data-v-ead3e541 {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.submit-btn.data-v-ead3e541 {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}
.submit-btn.data-v-ead3e541::after {
  border: none;
}
.submit-btn.disabled.data-v-ead3e541 {
  background: #ccc;
  color: #999;
}
