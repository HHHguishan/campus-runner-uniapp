
.completed-container.data-v-456eccc7 {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 筛选栏 */
.filter-bar.data-v-456eccc7 {
  display: flex;
  background: #fff;
  padding: 20rpx;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 50;
}
.filter-item.data-v-456eccc7 {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 8rpx;
  margin: 0 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}
.filter-item.active.data-v-456eccc7 {
  background: #07c160;
  color: #fff;
  font-weight: bold;
}

